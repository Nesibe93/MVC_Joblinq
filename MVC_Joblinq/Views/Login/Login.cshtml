@model MVC_Joblinq.ViewModels.LoginVM

<h1>Kullanıcı Giriş</h1>

<form method="post" action="Login" class="mt-5">
    <div class="mb-3">
        <label class="form-label">E-Mail</label>
        <input type="email" class="form-control" asp-for="UserEmail"/>
    </div>
    <div class="mb-3">
        <label class="form-label">Password</label>
        <input type="password" class="form-control" asp-for="UserPassword" />
    </div>
    <button type="submit" class="btn-primary"> Giriş </button>
    </form>