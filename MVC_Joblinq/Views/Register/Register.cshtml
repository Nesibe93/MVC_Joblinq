@model MVC_Joblinq.ViewModels.RegisterVM // Ara model

<h1>Kullanıcı Kayıt</h1>
<form method="post" asp-controller="Register" asp-action="Register" class="mt-5">
    <div class="mb-3">
        <label class="form-label">E-Mail</label>
        <input type="email" class="form-control" asp-for="UserEmail"/>
    </div>
    <div class="mb-3">
        <label class="form-label">Password</label>
        <input type="password" class="form-control" asp-for="UserPassword" />
    </div>
    <div class="mb-3">
        <label class="form-label">Kullanıcı Tipi</label>
        <select class="form-select" asp-for="UserType" asp-items="@ViewBag.usertype">
            <option value="">--- Kullanıcı Tipi Seçiniz</option>

        </select>
        
    </div>
    <button type="submit" class="btn-primary"> Kaydet </button>



</form>